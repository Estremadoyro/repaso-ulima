                        </div>
                            <!-- Modal Pregunta Creada -->

                        <!-- Button trigger modal -->
                            
                            <!-- Modal -->
                            <div class="modal fade" id="verifPregunta" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Alerta</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    </div>
                                    <div class="modal-body">
                                        Tu preguna ha sido agregada! 
                                    </div>
                                    <div class="modal-footer">
                                    
                                    <button type="button" class="btn btn-success verde" data-dismiss="modal">Ok!</button>
                                    </div>
                                </div>
                                </div>
                            </div>



                    </div>
                    <div class="col col-8 px-0 opciones_box">
                        <!--Columna Derecha-->

                        <!-- Se debe generar dinamicamente-->
                        <div class="text-center mt-4 opciones">
                            <div class="row justify-content-center">

                                <div class="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="exampleRadios"
                                            id="input_radio_1" value="option1">
                                        <div class="form-label-group d-inline-block ">
                                            <input type="text" name="credits" id="input_option_1"
                                                class="form-control form-control-lg" required autofocus>
                                            <label class="d-inline-block" for="inputCreditos">Opcion 1</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="exampleRadios"
                                            id="input_radio_2" value="option1">
                                        <div class="form-label-group d-inline-block ">
                                            <input type="text" name="credits" id="input_option_2"
                                                class="form-control form-control-lg" required autofocus>
                                            <label class="d-inline-block" for="inputCreditos">Opcion 2</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row justify-content-center">
                                <div class="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="exampleRadios"
                                            id="input_radio_3" value="option1">
                                        <div class="form-label-group d-inline-block ">
                                            <input type="text" name="credits" id="input_option_3"
                                                class="form-control form-control-lg" required autofocus>
                                            <label class="d-inline-block" for="inputCreditos">Opcion 3</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="exampleRadios"
                                            id="input_radio_4" value="option1">
                                        <div class="form-label-group d-inline-block ">
                                            <input type="text" name="credits" id="input_option_4"
                                                class="form-control form-control-lg" required autofocus>
                                            <label class="d-inline-block" for="inputCreditos">Opcion 4</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="alerta" class="none" role="alert">asdf</div>

                        </div> <!-- align-self-top -->
