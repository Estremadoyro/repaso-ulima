<body>
    <div class="container">
        <section class="py-0">
            <div class="text-center py-0">
                <!--LOGO-->
                <a href="/main"><img src="/images/logo-repasoulima-main.png"></a>
            </div>
            <div class="tabs tabs-style-tzoid">
                <nav>
                    <ul>
                        <li class="cursos_tabs">
                            <a class="fa fa-book row">
                                <span>&nbsp;<%=topic%></span>
                            </a>
                        </li>
                    </ul>
                </nav>

                <div class="content-wrap row">
                    <!--align-self- alineazion horizontal-->
                    <div class="col col-4  align-self-top text-center px-0 my-4">
                        <!--Columna Izquierda-->
                        <h1><b>Nueva Pregunta: </b></h1>
                        <div>
                            <textarea name="pregunta" id="input_question" cols="20" rows="5" placeholder="Escribir pregunta.." autofocus ></textarea>
                            <br>
                            <a onclick="topicView('<%=teacher%>','<%=course%>','<%=topic%>')" class="btn btn-sm btn-login text-uppercase font-weight-bold verde" id="btn_back">
                                <span class="fa fa-arrow-left"></span>
                            </a>
                            <a onclick="crearPregunta('<%=course%>','<%=topic%>')" class="btn btn-sm btn-login text-uppercase font-weight-bold verde" id="btn-addCurso"
